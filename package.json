{
  "name": "paragon-ui",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "build:fast": "turbo run build:fast",
    "dev": "turbo run dev",
    "typecheck": "tsc --noEmit",
    "lint": "eslint packages/**/**/src --ext .ts,.tsx --config .eslintrc.json --cache",
    "format:check": "prettier --check packages/**/**/src --cache",
    "format:write": "prettier --write packages/**/**/src --cache",
    "clean": "pnpm -r --parallel exec rimraf dist .turbo *.log node_modules .next",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "postinstall": "tsx scripts/patchJestDom.ts"
  },
  "dependencies": {
    "@paragon-ui/eslint-config": "workspace:*",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@types/node": "^17.0.12",
    "@types/react": "^18.0.22",
    "@types/testing-library__jest-dom": "5.14.5",
    "@vitest/coverage-c8": "^0.30.0",
    "happy-dom": "^9.1.7",
    "prettier": "^2.6.2",
    "rimraf": "^5.0.0",
    "tsup": "^6.7.0",
    "tsx": "^3.12.6",
    "turbo": "latest",
    "typescript": "^5.0.4",
    "vitest": "^0.30.0"
  },
  "pnpm": {
    "overrides": {
      "react": "^18.2.0",
      "react-dom": "^18.2.0"
    }
  },
  "engines": {
    "node": ">=16.x"
  },
  "packageManager": "pnpm@8.1.0"
}